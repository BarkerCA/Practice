%table{:class => "ctable"}
  %thead
    %tr
      %th Title
      %th Content
      %th Published?
      %th Date
      %th{:colspan => "3"}Actions
    
  %tbody
    -@posts.each do |post|
      %tr
        %td= post.title
        %td= post.body
        %td= post.published
        %td= post.date
        %td= link_to 'Show', post
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }

%p= link_to 'New Post', new_post_path, {:class => "button"}
